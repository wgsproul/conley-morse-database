<config> <!-- Beginning of the configuration -->
<!-- Set up the name and the description of the model -->
<model>
  <name> van der Pol oscillator </name>
  <desc> The classic van der Pol example </desc>
</model>
<!-- Set up the parameter space -->
<param>
  <dim> 1 </dim> <!-- Dimension of the parameter space -->
  <bounds>
    <lower> 2.5 </lower><!-- Lower bounds of the parameter space (order is important) -->
    <upper> 2.5 </upper><!-- Upper bounds of the parameter space (order is important) -->
  </bounds>
  <subdiv>
    <depth> 6 </depth> <!-- number of subdivisions in each direction of the parameter space -->
  </subdiv>
</param>
<!-- Set up the phase space -->
<phase>
  <dim> 2 </dim> <!-- Dimension of the phase space -->
  <bounds>
    <lower> -5.0 -5.0 </lower> <!-- Lower bounds of the phase space (order is important) -->
    <upper> 5.0 5.0 </upper> <!-- Upper bounds of the phase space (order is important) -->
  </bounds>
  <subdiv>
    <init> 0 </init> <!-- Initial number of subdivisions -->
    <min> 24 </min> <!-- Minimum number of subdivisions -->
    <max> 28 </max> <!-- Maximum number of subdivisions -->
    <limit> 1000 </limit> <!--  -->
  </subdiv>
</phase>
</config> <!-- End of the configuration -->
